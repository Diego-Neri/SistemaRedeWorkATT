@model CurriculoViewModel


@{
    ViewData["HideFooter"] = true;
    ViewData["HideNavBar"] = true;
    // ViewData["Title"] = "Preencha seu Currículo";

}

@* @await Html.PartialAsync("_NavbarEstudante", Model.Estudante) *@


@if (Model != null) {

    @if (TempData["MensagemSucesso"] != null) {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="container mt-5">
        <h2 class="mb-4">Formulário de Currículo</h2>
        <form method="post" enctype="multipart/form-data" asp-action="SalvarCurriculo">
            
            <!-- Campo oculto para o id do currículo -->
            <input type="hidden" asp-for="Curriculo.Id" />
            <!-- Campo oculto para o id do estudante -->
            <input type="hidden" asp-for="Curriculo.EstudanteId"/>

            <div class="mb-3">
                <a href="@Url.Action("EstudanteLogado", "Login", new { id = Model.Estudante.Id })" class="btn btn-primary">
                    Voltar
                </a>
            </div>

            <div class="row">
                <!-- Nome Completo -->
                <div class="col-md-6 mb-3">
                    <label for="NomeCompleto" class="form-label">Nome Completo</label>
                    <input asp-for="Curriculo.NomeCompleto" class="form-control" placeholder="Digite seu nome completo" />
                    <span asp-validation-for="Curriculo.NomeCompleto" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6 mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Curriculo.Email" type="email" class="form-control" placeholder="Digite seu email" />
                    <span asp-validation-for="Curriculo.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Idade -->
                <div class="col-md-3 mb-3">
                    <label for="Idade" class="form-label">Data de Nascimento</label>
                    <input asp-for="Curriculo.DataNascimento" type="date" class="form-control" placeholder="Digite sua idade" />
                    <span asp-validation-for="Curriculo.DataNascimento" class="text-danger"></span>
                </div>

                <!-- Telefone -->
                <div class="col-md-9 mb-3">
                    <label for="Telefone" class="form-label">Telefone</label>
                    <input asp-for="Curriculo.Telefone" class="form-control" placeholder="Digite seu telefone" />
                    <span asp-validation-for="Curriculo.Telefone" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Objetivo -->
                <div class="col-md-12 mb-3">
                    <label for="Objetivo" class="form-label">Objetivo Profissional</label>
                    <textarea asp-for="Curriculo.Objetivo" class="form-control" placeholder="Descreva seu objetivo profissional"></textarea>
                    <span asp-validation-for="Curriculo.Objetivo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Universidade -->
                <div class="col-md-6 mb-3">
                    <label for="Universidade" class="form-label">Universidade</label>
                    <input asp-for="Curriculo.Universidade" class="form-control" placeholder="Nome da universidade" />
                    <span asp-validation-for="Curriculo.Universidade" class="text-danger"></span>
                </div>

                <!-- Curso -->
                <div class="col-md-3 mb-3">
                    <label for="Curso" class="form-label">Curso</label>
                    <input asp-for="Curriculo.Curso" class="form-control" placeholder="Nome do curso" />
                    <span asp-validation-for="Curriculo.Curso" class="text-danger"></span>
                </div>

                <!-- Semestre -->
                <div class="col-md-3 mb-3">
                    <label for="Semestre" class="form-label">Semestre</label>
                    <input asp-for="Curriculo.Semestre" class="form-control" placeholder="Semestre atual" />
                    <span asp-validation-for="Curriculo.Semestre" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Educação -->
                <div class="col-md-12 mb-3">
                    <label for="Educacao" class="form-label">Educação - Cursos</label>
                    <textarea asp-for="Curriculo.Educacao" class="form-control" placeholder="Descreva sua formação acadêmica"></textarea>
                    <span asp-validation-for="Curriculo.Educacao" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Experiência -->
                <div class="col-md-12 mb-3">
                    <label for="Experiencia" class="form-label">Experiência</label>
                    <textarea asp-for="Curriculo.Experiencia" class="form-control" placeholder="Descreva suas experiências profissionais"></textarea>
                    <span asp-validation-for="Curriculo.Experiencia" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Habilidades -->
                <div class="col-md-12 mb-3">
                    <label for="Habilidade" class="form-label">Habilidades</label>
                    <textarea asp-for="Curriculo.Habilidade" class="form-control" placeholder="Liste suas habilidades"></textarea>
                    <span asp-validation-for="Curriculo.Habilidade" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Certificados -->
                <div class="col-md-12 mb-3">
                    <label for="Certificado" class="form-label">Certificados</label>
                    <textarea asp-for="Curriculo.Certificado" class="form-control" placeholder="Liste suas certificações"></textarea>
                    <span asp-validation-for="Curriculo.Certificado" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Idiomas -->
                <div class="col-md-12 mb-3">
                    <label for="Idioma" class="form-label">Idiomas</label>
                    <textarea asp-for="Curriculo.Idioma" class="form-control" placeholder="Idiomas que você fala"></textarea>
                    <span asp-validation-for="Curriculo.Idioma" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Salvar Currículo</button>
        </form>
    </div>

    <!-- Upload de Arquivo -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Anexe seu currículo</h2>

        <form action="/PerfilEstudante/UploadImagem" enctype="multipart/form-data" method="post" class="mb-4">
            <div class="input-group">
                <input type="file" name="arquivos" multiple class="form-control" />
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Arquivos.First().Descricao)
                            </th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Arquivos != null && Model.Arquivos.Any()) {
                            foreach (var item in Model.Arquivos) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        <a asp-action="Visualizar" asp-route-id="@item.Id" target="_blank" class="btn btn-info btn-sm">Visualizar</a>
                                    </td>
                                </tr>
                            }
                        } else {
                            <tr>
                                <td colspan="2" class="text-center">Nenhuma imagem encontrada.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>

}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Quando o botão com a classe 'close-alert' for clicado
            $('.close-alert').click(function () {
                // Esconde o elemento pai (a div com a mensagem)
                $(this).closest('.alert').fadeOut();
            });
        });
    </script>
}
