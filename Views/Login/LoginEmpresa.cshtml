@model SistemaRedeWork.Models.LoginEmpresaModel

@{
    // Layout = null;
    // ViewData["Title"] = "Login - Estudante";
    ViewData["HideFooter"] = true;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Empresa</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>

    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null) {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }


    <div class="container-login">
        

        <!-- Caixa de informações -->
        <div class="info-box">
            <img src="~/content/img/livros.png" alt="Imagem de Livros" class="centered-image">
            <h4>Sua empresa + nossos estudantes = soluções criativas e eficientes!</h4>
        </div>

        <!-- Caixa de login -->
        <div class="login-box">
            <h4>Login-Empresa!</h4>
            <p>Preencha os campos abaixo com os seus dados de acesso.</p>

            @using (Html.BeginForm("LoginEmpresa", "Login", FormMethod.Post)) {
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite o seu e-mail" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div>
                    <input asp-for="RememberMe" type="checkbox" />
                    <label asp-for="RememberMe">Lembrar-me</label>
                </div>
                <button type="submit" class="btn-login">Acessar</button>

                <p class="mb-4 text-sm mx-auto">
                    Esqueceu sua senha?
                    <a asp-action="ForgotPasswordEmpresa" asp-controller="Account" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a>
                </p>
            }

            <p class="mt-3">Não possui uma conta? <a asp-area="" asp-controller="Cadastro" asp-action="CadastroEmpresa">Criar minha conta</a></p>
        </div>
    </div>


</body>
</html>

    <style>
 * {
    padding: 0px;
    box-sizing: border-box;
    font-family: "IBM Plex Sans", sans-serif;
}

body {
    font-family: "IBM Plex Sans", sans-serif;
    background-color: #f5f5f5;
    display: flex; /* Usar flexbox para centralizar o conteúdo */
    flex-direction: column; /* Coloca os elementos em coluna */
    height: 100vh; /* Altura total da tela */
}

.container-login {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: auto;
    max-width: 1280px;
    height: 720px;
    background-color: #2F005F;
    border-radius: 10px;
    overflow: hidden;
}

.info-box {
    flex: 1;
    background-color: #5D2CE7;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    color: #FFFFFF;
}

    .info-box h4 {
        font-size: 55px;
        text-align: center;
        font-weight: lighter;
        margin-bottom: 20px; /* Adiciona espaço abaixo do título */
    }

.login-box {
    flex: 1;
    background-color: #5D2CE7;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    color: #FFFFFF;
}

    .login-box h4 {
        font-size: 55px; /* Tamanho da fonte ajustado para destaque */
        margin-bottom: 10px;
        font-weight: bold;
        text-align: center; /* Centraliza o título */
    }

    .login-box p {
        font-size: 18px; /* Tamanho do texto explicativo */
        margin-bottom: 20px; /* Espaçamento abaixo do texto */
    }

    .login-box input {
        background-color: #fff;
        border: none;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .login-box input:focus {
            outline: none;
            border: 2px solid #090020;
            box-shadow: 0 0 5px rgba(161, 110, 255, 0.5);
        }

    .login-box button {
        width: 100%; /* Ajustar a largura do botão */
        padding: 10px;
        background-color: #7AFFBF; /* Cor inicial do botão */
        color: #000; /* Deixar o texto do botão visível */
        font-size: 18px;
        font-weight: normal;
        border: none; /* Remover a borda do botão */
        border-radius: 5px;
        cursor: pointer;
        transition: transform 0.3s ease, background-color 0.3s ease; /* Transição para transformação e cor de fundo */
        text-align: center; /* Centraliza o texto */
        outline: none; /* Remove a borda preta ao clicar */
    }

        .login-box button:hover {
            background-color: #5DFFA8;
            transform: scale(1.05);
        }

        .login-box button:active {
            transform: scale(0.95);
            background-color: #4DCC9B;
        }

    .login-box a {
        color: #7AFFBF;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
    }

        .login-box a:hover {
            text-decoration: underline;
        }

    .login-box .btn-voltar {
        position: absolute;
        top: -40px;
        left: 0;
        background-color: transparent;
        border: none;
        color: #ffffff;
        font-size: 18px;
        text-decoration: none;
        cursor: pointer;
    }

.info-box .centered-image {
    margin-bottom: 20px; /* Adiciona espaço entre a imagem e o texto */
    max-width: 400px; /* Ajuste o tamanho conforme necessário */
}

    footer {
        font-family: 'IBM Plex Sans', sans-serif;
        background-color: #5D2CE7 !important; /* Força a cor de fundo do rodapé */
        color: #fff; /* Cor do texto no rodapé */
        width: 100%;
        position: relative;
        bottom: 0;
        left: 0;
        padding: 10px 0; /* Reduz o padding superior e inferior */
        text-align: center; /* Centraliza o texto no rodapé */
        font-size: 14px; /* Reduz o tamanho da fonte */
    }


    </style>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Quando o botão com a classe 'close-alert' for clicado
            $('.close-alert').click(function () {
                // Esconde o elemento pai (a div com a mensagem)
                $(this).closest('.alert').fadeOut();
            });
        });
    </script>
}