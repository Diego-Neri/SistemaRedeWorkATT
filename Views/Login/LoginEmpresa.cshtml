@model SistemaRedeWork.Models.LoginEmpresaModel

@{
    // Layout = null;
    // ViewData["Title"] = "Login - Estudante";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Empresa</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <style>
        body {
            background: linear-gradient(180deg, #4B0082 0%, #2B014C 100%);
            color: #ffffff;
            /* height: 100vh;
            display: flex; */
            justify-content: center;
            align-items: center;
            font-family: 'Arial', sans-serif;
            margin: 0;
        }

        .container-login {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 60%;
            height: 100vh;
        }

        .info-box {
            flex: 1;
            margin-right: 50px;
        }

            .info-box h4 {
                font-size: 36px;
                font-weight: bold;
                color: #FFFFFF;
            }

        .login-box {
            background-color: #1e1a32;
            padding: 30px;
            border-radius: 10px;
            width: 300px;
        }

            .login-box h4 {
                font-size: 28px;
                margin-bottom: 20px;
                color: #FFFFFF;
            }

            .login-box input {
                background-color: #3d3557;
                color: #ffffff;
                border: none;
                padding: 10px;
                margin-bottom: 15px;
                border-radius: 5px;
            }

            .login-box button {
                background-color: #00ff00;
                color: #000;
                border: none;
                padding: 10px;
                width: 100%;
                border-radius: 5px;
                font-size: 16px;
                font-weight: bold;
            }

            .login-box a {
                color: #00ff00;
                text-decoration: none;
            }

        .info-box, .login-box {
            color: #ffffff;
        }
    </style>
</head>
<body>

    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null) {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label"Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }


    <div class="container-login">
        <img src="./content/img/LogoBranca.png" alt="Logo da Empresa" />

        <!-- Caixa de informações -->
        <div class="info-box">
            <h4>Sua empresa + nossos estudantes = soluções criativas e eficientes!</h4>
        </div>

        <!-- Caixa de login -->
        <div class="login-box">
            <h4>Bem-vindo(a)!</h4>
            <p>Preencha os campos abaixo com os seus dados de acesso.</p>

            @using (Html.BeginForm("LoginEmpresa", "Login", FormMethod.Post)) {
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Digite o seu e-mail" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn-login">Acessar</button>
            }

            <p class="mt-3">Não possui uma conta? <a href="#">Criar minha conta</a></p>
        </div>
    </div>


</body>
</html>
