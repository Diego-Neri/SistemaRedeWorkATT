@{
    ViewData["Title"] = "Página Inicial";
}

<!-- Seção Principal com Imagem e Informações -->
<div class="container mt-5">

    <!-- Seção Hero - Destaque Inicial -->
    <div class="row align-items-center" data-aos="fade-up">
        <!-- Imagem Principal -->
        <div class="col-md-6 text-center mb-4 mb-md-0">
            <img src="./content/img/ImagemPrincipal.svg" class="img-fluid rounded shadow-lg" alt="Imagem Principal">
        </div>

        <!-- Informações de Destaque -->
        <div class="col-md-6">
            <div class="d-flex flex-column align-items-start">
                <!-- Ícones de destaque -->
                <div class="d-flex mb-4">
                    <div class="d-flex align-items-center me-4">
                        <img src="./content/icones/icon-escudo.png" class="me-2" alt="Pagamentos Protegidos" style="width: 20px;" />
                        <span class="fw-bold text-muted">Pagamentos Protegidos</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <img src="/content/icones/icon-agilidade.png" class="me-2" alt="Agilidade" style="width: 20px;" />
                        <span class="fw-bold text-muted">Agilidade</span>
                    </div>
                </div>

                <!-- Texto Promocional -->
                <div class="p-2">
                    <p class="lead text-muted">Acelere seus projetos contratando <span class="fw-bold text-accent">estudantes freelancers</span> talentosos e dedicados.</p>
                    <a href="#contato" class="btn btn-accent btn-lg mt-3 shadow">Saiba Mais</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Seção Sobre Nós -->
    <div class="row mt-5" data-aos="fade-up" data-aos-delay="200">
        <div class="col-12 text-center">
            <h2 id="sobre-nos" class="mb-3 fw-bold text-accent">Sobre Nós</h2>
            <p class="text-muted lead">
                O <strong class="text-light">RedeWork</strong> é uma plataforma focada em conectar estudantes de TI com oportunidades no mercado de trabalho.
                Nosso objetivo é proporcionar um ambiente onde empresas possam encontrar talentos emergentes e estudantes possam ganhar experiência prática e desenvolver suas habilidades.
            </p>
            <h4 class="mt-5 text-accent">Nossos Valores</h4>
            <ul class="list-unstyled text-muted mt-3">
                <li><strong class="text-light">Foco no estudante:</strong> Promover a inserção de novos talentos no mercado.</li>
                <li><strong class="text-light">Inovação:</strong> Sempre em busca de soluções tecnológicas para melhorar nossos serviços.</li>
                <li><strong class="text-light">Responsabilidade:</strong> Garantir segurança e qualidade em todas as transações.</li>
                <li><strong class="text-light">Transparência:</strong> Comunicação clara entre freelancers e clientes.</li>
            </ul>
        </div>
    </div>
</div>

<!-- AOS Library -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        once: true, // As animações acontecerão apenas uma vez
        duration: 1000, // Duração de 1 segundo para todas as animações
    });
</script>

<!-- Custom Styles -->
<style>
    /* Fonte Global: IBM Plex Sans */
    body {
        font-family: 'IBM Plex Sans', sans-serif;
        background: linear-gradient(135deg, #f0f4f8 0%, #d9e4f5 100%);
        color: #333;
    }

    h2, h4, h5 {
        font-weight: 700;
    }

    p {
        font-size: 1.125rem;
        line-height: 1.6;
        color: #555;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    .btn-accent {
        background-color: #6f2c91;
        border: none;
        color: #fff;
    }

        .btn-accent:hover {
            background-color: #fff;
        }

    /* Ícones e Imagens */
    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .fw-bold {
        font-weight: 700;
    }

    .text-accent {
        color: #a463c8 !important;
    }

    .text-muted {
        color: #a463c8a463c8 !important;
    }

    .text-light {
        color: #a463c8 !important;
    }

    /* Efeito de sombra */
    .shadow {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .shadow-lg {
        box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.2);
    }

    /* Ajustes de margem e espaçamento */
    .mb-3 {
        margin-bottom: 1.5rem !important;
    }

    .mb-4 {
        margin-bottom: 2rem !important;
    }

    .mt-5 {
        margin-top: 4.5rem !important;
    }

    .py-5 {
        padding: 2rem 0 !important;
    }
</style>

<h1>@ViewData["Message"]</h1>
