<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaRedeWork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaRedeWork.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3 shadow-sm">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo isolada no canto esquerdo superior -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="position: absolute; left: 15px; top: 10px;">
                    <img src="/content/img/LogoRedeWork2.png" alt="RedeWork" class="logo">
                </a>

                <!-- Botão de menu para dispositivos menores -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links de navegação centralizados -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ComoFunciona">Como Funciona</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vaga" asp-action="Index">Testar view</a>
                        </li>
                    </ul>
                </div>

                <!-- Login e Cadastre-se no lado direito superior -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" style="position: absolute; right: 15px; top: 10px;">
                    <ul class="navbar-nav">
                        <!-- Dropdown de Login -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Login
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Login" asp-action="LoginEstudante">Estudante</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Login" asp-action="LoginEmpresa">Empresa</a></li>
                            </ul>
                        </li>

                        <!-- Dropdown de Cadastro -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cadastre-se
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Cadastro" asp-action="CadastroEstudante">Estudante</a></li>
                                <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Cadastro" asp-action="CadastroEmpresa">Empresa</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @await RenderSectionAsync("Styles", required: false)
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start text-white" style="background-color: #1c2331; padding: 10px 0; position: relative; bottom: 0; width: 100%;">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-between p-2" style="background-color: #6351ce;">
            <!-- Right -->
            <div>
                <a href="" class="text-white me-2">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="text-white me-2">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="text-white me-2">
                    <i class="fab fa-linkedin"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section>
            <div class="container text-center text-md-start mt-3">
                <!-- Grid row -->
                <div class="row mt-1">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-2">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold">RedeWork</h6>
                        <hr class="mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p>RedeWork é uma plataforma que conecta estudantes a empresas, oferecendo oportunidades de estágios e networking para facilitar a inserção no mercado de trabalho.</p>
                    </div>
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-2">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Serviços</h6>
                        <hr class="mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p><a href="#!" class="text-white">Vagas</a></p>
                        <p><a href="#!" class="text-white">Encontrar Estudantes</a></p>
                    </div>
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-2">
                        <!-- Links -->
                        <h6 id="contato" class="text-uppercase fw-bold">Contatos</h6>
                        <hr class="mb-2 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #7c4dff; height: 2px" />
                        <p><i class="fas fa-home mr-3"></i> São Paulo, Avenida Paulinas 123, BR</p>
                        <p><i class="fas fa-envelope mr-3"></i> contato@redework.com.br</p>
                        <p><i class="fas fa-phone mr-3"></i> +55 11 96583-3921</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2024 | REDEWORK - Todos os direitos reservados
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>

<style>
    /* Estilo para a navbar */
    .navbar {
        font-family: 'IBM Plex Sans', sans-serif;
        transition: background-color 0.3s ease-in-out;
    }

    .navbar-brand img.logo {
        height: 40px;
        max-width: 100%;
    }

    /* Cor do link e efeito ao passar o mouse */
    .nav-link {
        color: #333;
        font-weight: 500;
        transition: color 0.2s ease;
    }

        .nav-link:hover {
            color: #00BFFF; /* Cor azul clara ao passar o mouse */
            text-decoration: underline; /* Adiciona sublinhado */
        }

    /* Dropdown estilo minimalista */
    .dropdown-menu {
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
        transition: background-color 0.2s ease;
    }

        .dropdown-item:hover {
            background-color: #f8f9fa; /* Efeito de destaque ao passar o mouse */
        }

    /* Estilo para o botão de menu em dispositivos menores */
    .navbar-toggler {
        border: none;
        outline: none;
    }

    .navbar-toggler-icon {
        filter: brightness(0.5);
    }

    .navbar-toggler:hover .navbar-toggler-icon {
        filter: brightness(1); /* Torna o ícone mais claro ao passar o mouse */
    }
</style>

</html>
