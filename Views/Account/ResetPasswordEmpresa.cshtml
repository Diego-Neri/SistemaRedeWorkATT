@model SistemaRedeWork.Models.ResetPasswordViewModel

@{
    ViewData["HideFooter"] = true;
}
<body>
    <div class="container mt-5">
        <div class="card" style="max-width: 400px; margin: auto;">
            <div class="card-header text-center">
                <h2>Redefinir Senha</h2>
            </div>
            <div class="card-body">
                @if (TempData["MensagemErro"] != null) {
                    <div class="alert alert-danger d-flex justify-content-between align-items-center" role="alert">
                        <span>@TempData["MensagemErro"]</span>
                        <button type="button" class="btn btn-danger btn-sm" aria-label="Close" onclick="this.parentElement.style.display='none';">X</button>
                    </div>
                }

                <form asp-action="ResetPasswordEmpresa" method="post">
                    <input type="hidden" asp-for="Email" />

                    <div class="form-group">
                        <label for="NewPassword">Nova Senha</label>
                        <input type="password" asp-for="NewPassword" class="form-control" id="NewPassword" placeholder="Digite a nova senha" required />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmPassword">Confirme a Senha</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirme a nova senha" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Redefinir Senha</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'IBM Plex Sans', sans-serif;
        }

        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            background-color: #5D2CE7;
            color: white;
            border-bottom: none;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .btn-primary {
            background-color: #5D2CE7;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
    <script>
        function closeAlert(button) {
            // Esconde o alerta
            button.parentElement.style.display = 'none';
        }
    </script>
</body>
 