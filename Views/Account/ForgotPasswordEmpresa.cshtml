@model ForgotPasswordViewModel

@{
    ViewData["HideFooter"] = true;
    ViewBag.title = "Esqueceu sua senha?";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'IBM Plex Sans', sans-serif;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        background-color: #5D2CE7;
        color: white;
        border-bottom: none;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .btn-primary {
        background-color: #5D2CE7;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<body>
    <div class="container mt-2">
        <div class="card">
            <div class="card-header text-center">
                <h2>Esqueceu sua senha?</h2>
            </div>
            <div class="card-body">
                <form asp-action="ForgotPasswordEmpresa" method="post">
                    <div class="form-group">
                        <label for="Email">E-mail</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Digite seu e-mail" required />
                        <div class="text-danger" id="emailError"></div> <!-- Para mensagens de erro -->
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="@Url.Action("LoginEmpresa", "Login")">Voltar para o Login</a>
                </div>
            </div>
        </div>
    </div>

   
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.close-alert').click(function () {
                $(this).closest('.alert').fadeOut();
            });
        });
    </script>
}